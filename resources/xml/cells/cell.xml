<brls:Box
    width="auto"
    height="auto"
    focusable="true"
    paddingTop="12.5"
    axis="column"
    paddingBottom="12.5">
    <brls:Box
        width="auto"
        height="auto"
        axis="row"
        alignItems="flexStart">

        <brls:Image
        id="image"
        width="100px"
        height="100px"/>
        
        <brls:Box
        width="auto"
        height="auto"
        axis="column"
        alignItems="flexStart">

            <brls:Label
                id="title"
                width="auto"
                height="auto"
                grow="1.0"
                fontSize="24"
                marginTop="@style/brls/sidebar/item_accent_margin_top_bottom"
                marginBottom="@style/brls/sidebar/item_accent_margin_top_bottom"
                marginLeft="@style/brls/sidebar/item_accent_margin_sides"
                marginRight="@style/brls/sidebar/item_accent_margin_sides" />

            <brls:Label
                id="subtitle"
                width="auto"
                height="auto"
                grow="1.0"
                fontSize="16"
                marginTop="@style/brls/sidebar/item_accent_margin_top_bottom"
                marginBottom="@style/brls/sidebar/item_accent_margin_top_bottom"
                marginLeft="@style/brls/sidebar/item_accent_margin_sides"
                marginRight="@style/brls/sidebar/item_accent_margin_sides"/>
        </brls:Box>
    </brls:Box>
</brls:Box>
