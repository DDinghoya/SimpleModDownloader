<brls:AppletFrame
    id="applet"
    iconInterpolation="linear"
    footerHidden="false">

    <brls:TabFrame
        title="@i18n/menu/main/app_name">

        <brls:Tab label ="@i18n/menu/tabs/downloads">
            <GameListTab/>
        </brls:Tab>

        <brls:Tab label ="@i18n/menu/tabs/install">
            <InstallationTab/>
        </brls:Tab>

        <brls:Separator/>

        <brls:Tab label ="@i18n/menu/tabs/settings">
            <SettingsTab/>
        </brls:Tab>

        <brls:Tab label="@i18n/menu/tabs/about">
            <brls:Box
                width="auto"
                height="auto"
                axis="column"
                paddingTop="@style/about/padding_top_bottom"
                paddingBottom="@style/about/padding_top_bottom"
                paddingLeft="@style/about/padding_sides"
                paddingRight="@style/about/padding_sides" >

                <brls:Box
                    width="auto"
                    height="auto"
                    axis="column"
                    marginBottom="@style/about/description_margin">

                    <brls:Label
                        width="auto"
                        height="auto"
                        fontSize="35"
                        horizontalAlign="center"
                        text="@i18n/menu/main/app_name"/>

                    <brls:Image
                        width="auto"
                        height="33%"
                        image="@res/icon/icon.png"
                        cornerRadius="15"
                        marginTop="@style/about/description_margin"
                        marginBottom="@style/about/description_margin"/>

                    <brls:Label
                        fontSize="15"
                        width="auto"
                        height="auto"
                        singleLine="false"
                        text="@i18n/menu/about/description"
                        horizontalAlign="center"/>

                </brls:Box>

                <brls:Box
                    width="auto"
                    height="auto"
                    axis="column"
                    alignItems="flexStart"
                    grow="1.0" >

                    <brls:Label
                        width="auto"
                        height="auto"
                        fontSize="12"
                        singleLine="false"
                        text="@i18n/menu/about/thanks"
                        grow="1.0"/>

                    <brls:Label
                        width="auto"
                        height="auto"
                        fontSize="12"
                        text="@i18n/menu/about/translator"
                        singleLine="false"/>

                </brls:Box>

            </brls:Box>
        </brls:Tab>

    </brls:TabFrame>

</brls:AppletFrame>