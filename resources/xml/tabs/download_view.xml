<brls:Box
    width="auto"
    height="auto"
    justifyContent="center"
    margin="20"
    axis="column">
        

    <brls:Label
        width="auto"
        height="50"
        id="download_text"
        margin="10"/>

    <brls:Box
        width="auto"
        height="auto"
        justifyContent="center"
        margin="4"
        axis="row">
        <brls:ProgressSpinner
            width="30"
            height="30"
            id="download_spinner"
            margin="10"
            size="normal"/>

        <brls:Slider
            width="80%"
            height="40"
            id="download_progressBar"
            margin="10"/>

        <brls:Label
            width="auto"
            height="30"
            id="download_percent"
            margin="10"/>

    </brls:Box>


    <brls:Label
        width="auto"
        height="50"
        id="extract_text"
        margin="10"/>

    <brls:Box
        width="auto"
        height="auto"
        justifyContent="center"
        margin="20"
        axis="row">
        <brls:ProgressSpinner
            width="30"
            height="30"
            id="extract_spinner"
            margin="10"
            size="normal"/>

        <brls:Slider
            width="80%"
            height="40"
            id="extract_progressBar"
            margin="10"/>

        <brls:Label
            width="auto"
            height="30"
            id="extract_percent"
            margin="10"/>

    </brls:Box>

</brls:Box>